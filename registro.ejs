<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registro - Presupuesto Personal</title>
  <link rel="icon" href="img/Logo.ico" type="image/x-icon">
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
  <style>
    .bg-gradient-radial {
      background-image: radial-gradient(circle, var(--tw-gradient-stops));
    }
    html, body {
      overflow-y: auto;
      height: 100%;
    }
    .text-gradient {
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      padding-bottom: 0.2em;
    }
    .toggle-image-btn {
      transition: all 0.3s ease;
    }
    .toggle-image-btn:hover {
      transform: rotate(90deg);
    }
  </style>
</head>
<body class="min-h-screen relative overflow-y-auto bg-slate-900">
  <!-- Fondo financiero elegante -->
  <div class="fixed inset-0 bg-gradient-to-br from-slate-900 via-fuchsia-900 to-slate-800 -z-10">
    <!-- Monedas y símbolos financieros flotantes -->
     
    <div class="absolute inset-0 opacity-40">
      <!-- Símbolos de dinero -->
      <div class="absolute top-10 left-10 text-2xl text-emerald-400 animate-pulse font-bold">$</div>
      <div class="absolute top-20 right-20 text-xl text-blue-300 animate-pulse delay-1000 font-bold">€</div>
      <div class="absolute top-40 left-1/4 text-lg text-slate-300 animate-pulse delay-500 font-bold">¥</div>
      <div class="absolute top-60 right-1/3 text-2xl text-indigo-300 animate-pulse delay-700 font-bold">£</div>
      <div class="absolute bottom-40 left-20 text-xl text-emerald-300 animate-pulse delay-300 font-bold">$</div>
      <div class="absolute bottom-60 right-40 text-lg text-purple-300 animate-pulse delay-1200 font-bold">₿</div>
      <div class="absolute top-1/3 left-1/2 text-xl text-blue-400 animate-pulse delay-800 font-bold">€</div>
      <div class="absolute bottom-20 left-1/3 text-2xl text-teal-300 animate-pulse delay-400 font-bold">$</div>
      <div class="absolute top-80 left-3/4 text-lg text-slate-400 animate-pulse delay-600 font-bold">¢</div>
      <div class="absolute bottom-80 right-1/4 text-xl text-indigo-400 animate-pulse delay-900 font-bold">₹</div>

      <!--Distribuicion logo background-->
      <div class="absolute bottom-40 right-4/4 ">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <div class="absolute top-20 left-3/4 text-2x1">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <div class="absolute bottom-20 right-40 text-lg">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
   

      <!-- Monedas circulares -->
      <div class="absolute top-32 right-10 w-8 h-8 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 opacity-60 animate-pulse delay-200 flex items-center justify-center text-xs font-bold text-yellow-900">$</div>
      <div class="absolute bottom-32 left-16 w-6 h-6 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 opacity-60 animate-pulse delay-800 flex items-center justify-center text-xs font-bold text-emerald-900">€</div>
      <div class="absolute top-1/2 right-1/4 w-7 h-7 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 opacity-60 animate-pulse delay-1100 flex items-center justify-center text-xs font-bold text-blue-900">¥</div>
      <div class="absolute bottom-1/4 left-1/2 w-5 h-5 rounded-full bg-gradient-to-br from-purple-400 to-purple-600 opacity-60 animate-pulse delay-500 flex items-center justify-center text-xs font-bold text-purple-900">£</div>
    </div>

    <!-- Efectos sutiles -->
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-radial from-blue-500/10 via-transparent to-transparent"></div>
    <div class="absolute bottom-0 right-0 w-full h-full bg-gradient-radial from-emerald-500/10 via-transparent to-transparent"></div>
  </div>

  <!-- Contenido principal -->
  <div class="relative z-10 py-8 px-4 min-h-screen">
    <div class="max-w-6xl mx-auto">
      <!-- Header - Texto "Registro" mejorado -->
      <div class="text-center space-y-4 mb-8 pt-6">
        <h1 class="text-6xl font-bold bg-gradient-to-r from-white via-yellow-700 to-emerald-200 text-gradient pb-3 drop-shadow-2xl">
          Regístrate
        </h1>
        <p class="text-xl text-white font-medium">Únete a la plataforma para tu Presupuesto</p>
        <p class="text-sm text-slate-300">
          Comienza tu viaje hacia la libertad financiera. Esta información se mostrará públicamente.
        </p>
      </div>

      <!-- Formulario principal -->
      <div class="border-slate-600/50 bg-gray-200 backdrop-blur-xl shadow-2xl rounded-xl mb-10">
        <div class="p-8">
          <form action="/registrar" method="POST" enctype="multipart/form-data" class="space-y-8" autocomplete="off">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Columna izquierda - Información personal -->
              <div class="space-y-6">
                <div class="space-y-4">
                  <h3 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                    <i data-lucide="user" class="h-6 w-6 text-blue-600"></i> Información Personal
                  </h3>
                  <div class="bg-slate-200 h-px w-full"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div class="space-y-2">
                    <label for="nom" class="text-slate-700 font-medium flex items-center gap-2">
                      <i data-lucide="user" class="h-4 w-4 text-blue-500"></i>
                      Nombres
                    </label>
                    <input
                      type="text"
                      id="nom"
                      name="nom"
                      placeholder="Juan Carlos"
                      required
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20"
                    />
                  </div>
                  <div class="space-y-2">
                    <label for="apell" class="text-slate-700 font-medium flex items-center gap-2">
                      <i data-lucide="user" class="h-4 w-4 text-blue-500"></i>
                      Apellidos
                    </label>
                    <input
                      type="text"
                      id="apell"
                      name="apell"
                      placeholder="Pérez Gómez"
                      required
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20"
                    />
                  </div>
                </div>

                <div class="space-y-2">
                  <label for="username" class="text-slate-700 font-medium flex items-center gap-2">
                    <i data-lucide="user" class="h-4 w-4 text-indigo-500"></i>
                    Nombre de usuario
                  </label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    placeholder="janesmith123"
                    required
					autocomplete="new-username"
                    class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20"
                  />
                </div>
				
				<div class="space-y-4">
                  <div class="space-y-2">
                    <label for="prof" class="text-slate-700 font-medium flex items-center gap-2">
                      <i data-lucide="briefcase" class="h-4 w-4 text-orange-500"></i> Profesión
                    </label>
                    <input
                      type="text"
                      id="prof"
                      name="prof"
                      placeholder="Ej. Analista Financiero"
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20"
                    />
                  </div>
                </div>
				
                <div class="space-y-2">
                  <label for="email" class="text-slate-700 font-medium flex items-center gap-2">
                    <i data-lucide="mail" class="h-4 w-4 text-purple-500"></i>
                    Correo electrónico
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="ejemplo@tucorreo.com"
                    required
                    class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20"
                  />
                </div>

                <div class="space-y-2">
                  <label for="pass" class="text-slate-700 font-medium flex items-center gap-2">
                    <i data-lucide="lock" class="h-4 w-4 text-red-500"></i>
                    Contraseña
                  </label>
                  <input
                    type="password"
                    id="pass"
                    name="pass"
                    placeholder="********"
                    minlength="6"
                    required
					autocomplete="new-password"
                    class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-red-500 focus:ring-2 focus:ring-red-500/20"
                  />
                  <p class="text-xs text-slate-600">
                     La contraseña debe tener al menos 6 caracteres para proteger tus finanzas.
                  </p>
                </div>
				
				
              </div>

              <!-- Columna derecha - Foto y detalles adicionales -->
              <div class="space-y-6">
                <!-- Foto de perfil -->
                <div class="space-y-4">
                  <h3 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                    <i data-lucide="camera" class="h-6 w-6 text-emerald-600"></i> Foto de Perfil
                  </h3>
                  <div class="bg-slate-200 h-px w-full"></div>
                </div>

                <div class="flex flex-col items-center space-y-4">
                  <!-- Preview principal - circular -->
                  <div class="relative">
                    <div class="w-40 h-40 border-4 border-slate-200 rounded-full bg-slate-50 shadow-lg flex items-center justify-center overflow-hidden">
                      <img
                        id="preview"
                        src=""
                        alt="Vista previa circular"
                        class="w-full h-full object-cover hidden"
                        style="object-position: center;"
                      />
                      <div id="default-icon" class="flex flex-col items-center">
                        <i data-lucide="user" class="h-12 w-12 text-slate-400 mb-2"></i>
                        <i data-lucide="dollar-sign" class="h-8 w-8 text-emerald-500"></i>
                      </div>
                    </div>
                    <button
                      type="button"
                      onclick="removeImage()"
                      id="btnEliminar"
                      class="absolute -top-2 -right-2 h-8 w-8 rounded-full p-0 bg-red-500 hover:bg-red-400 shadow-lg hidden items-center justify-center text-white"
                    >
                      <i data-lucide="x" class="h-4 w-4"></i>
                    </button>
                    <button
                      type="button"
                      onclick="toggleImageStyle()"
                      id="btnToggleStyle"
                      class="absolute -bottom-2 -right-2 h-8 w-8 rounded-full p-0 bg-blue-500 hover:bg-blue-400 shadow-lg hidden items-center justify-center text-white toggle-image-btn"
                      title="Ajustar imagen"
                    >
                      <i data-lucide="rotate-ccw" class="h-4 w-4"></i>
                    </button>
                  </div>

                  <!-- Preview completo - rectangular -->
                  <div id="fullPreviewContainer" class="w-full max-w-xs hidden">
                    <p class="text-xs text-slate-600 mb-2 text-center">Vista previa completa:</p>
                    <div class="relative bg-slate-50 border-2 border-slate-200 rounded-lg p-2">
                      <img
                        id="fullPreview"
                        src=""
                        alt="Vista previa completa"
                        class="w-full h-auto max-h-32 object-contain rounded"
                      />
                    </div>
                  </div>

                  <div class="flex flex-col gap-2">
                    <input
                      type="file"
                      id="foto"
                      name="foto"
                      accept="image/*"
                      class="hidden"
                      onchange="previewImage(event)"
                    />
                    <button
                      type="button"
                      onclick="document.getElementById('foto').click()"
                      class="bg-emerald-600 hover:bg-emerald-700 shadow-lg text-white font-medium py-2 px-4 rounded-md flex items-center justify-center"
                    >
                      <i data-lucide="camera" class="h-4 w-4 mr-2"></i>Subir imagen
                    </button>
                    <p class="text-xs text-slate-600 text-center">Solo imágenes (.jpg, .png, etc.)</p>
                    <p id="imageTip" class="text-xs text-blue-600 text-center hidden">
                      💡 Usa el botón azul para ajustar cómo se ve la imagen
                    </p>
                  </div>
                </div>

                <!-- Campos adicionales -->
				<div class="space-y-2">
                    <label for="expec" class="text-slate-700 font-medium flex items-center gap-2">
                      <i data-lucide="target" class="h-4 w-4 text-teal-500"></i> Metas Financieras
                    </label>
                    <textarea
                      id="expec"
                      name="expec"
                      rows="4"
                      placeholder="Cuéntanos tus objetivos financieros..."
                      class="w-full px-3 py-2 border border-slate-300 rounded-md bg-white text-slate-900 placeholder:text-slate-500 focus:border-teal-500 focus:ring-2 focus:ring-teal-500/20 resize-none"
                    ></textarea>
                  </div>
              </div>
            </div>

            <!-- Sección de notificaciones -->
            <div class="space-y-6">
              <div class="space-y-4">
                <h3 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                  <i data-lucide="bell" class="h-6 w-6 text-amber-600"></i>Notificaciones de Presupuesto
                </h3>
                <div class="bg-slate-200 h-px w-full"></div>
                <p class="text-slate-600">Elige cómo quieres recibir alertas sobre tus finanzas:</p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- Básico -->
                <label class="group cursor-pointer">
                  <input
                    type="radio"
                    name="notificaciones"
                    value="basico"
                    class="sr-only"
                    required
                  />
                  <div class="border-2 transition-all duration-300 hover:scale-105 border-slate-200 bg-white hover:bg-slate-50 rounded-xl p-6 text-center group-has-[input:checked]:border-emerald-500 group-has-[input:checked]:bg-emerald-50 group-has-[input:checked]:shadow-lg">
                    <div class="flex items-center justify-center gap-2 mb-2">
                      <div class="w-3 h-3 rounded-full bg-emerald-500"></div>
                      <h4 class="text-lg font-bold text-slate-800"> Básico</h4>
                    </div>
                    <p class="text-sm text-slate-600"> Resumen mensual de gastos e ingresos</p>
                  </div>
                </label>

                <!-- Medio -->
                <label class="group cursor-pointer">
                  <input
                    type="radio"
                    name="notificaciones"
                    value="medio"
                    class="sr-only"
                  />
                  <div class="border-2 transition-all duration-300 hover:scale-105 border-slate-200 bg-white hover:bg-slate-50 rounded-xl p-6 text-center group-has-[input:checked]:border-amber-500 group-has-[input:checked]:bg-amber-50 group-has-[input:checked]:shadow-lg">
                    <div class="flex items-center justify-center gap-2 mb-2">
                      <div class="w-3 h-3 rounded-full bg-amber-500"></div>
                      <h4 class="text-lg font-bold text-slate-800"> Moderado</h4>
                    </div>
                    <p class="text-sm text-slate-600"> Resumen mensual + alertas de límites de gastos</p>
                  </div>
                </label>

                <!-- Intenso -->
                <label class="group cursor-pointer">
                  <input
                    type="radio"
                    name="notificaciones"
                    value="intenso"
                    class="sr-only"
                  />
                  <div class="border-2 transition-all duration-300 hover:scale-105 border-slate-200 bg-white hover:bg-slate-50 rounded-xl p-6 text-center group-has-[input:checked]:border-orange-500 group-has-[input:checked]:bg-orange-50 group-has-[input:checked]:shadow-lg">
                    <div class="flex items-center justify-center gap-2 mb-2">
                      <div class="w-3 h-3 rounded-full bg-orange-500"></div>
                      <h4 class="text-lg font-bold text-slate-800"> Completo</h4>
                    </div>
                    <p class="text-sm text-slate-600">
                      Alertas diarias, semanales y recordatorios de pagos
                    </p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Botones de acción -->
            <div class="flex flex-col sm:flex-row gap-4 justify-end pt-6">
              <a
                href="/login"
                class="sm:w-auto w-full border border-slate-300 text-slate-700 hover:bg-red-50 hover:border-red-300 hover:text-red-700 transition-all duration-300 bg-transparent font-medium py-2 px-4 rounded-md flex items-center justify-center"
              >
                ❌ Cancelar
              </a>
              <button
                type="submit"
                class="sm:w-auto w-full bg-gradient-to-r from-fuchsia-700 to-fuchsia-700 hover:from-green-700 hover:to-green-700 text-white font-bold shadow-lg transition-all duration-300 py-2 px-4 rounded-md flex items-center justify-center"
              >
                <i data-lucide="user-plus" class="h-5 w-5 mr-2"></i> Comenzar mi Presupuesto
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Inicializar iconos Lucide
    lucide.createIcons();

    let currentImageStyle = 'cover';

    // Vista previa de imagen
    function previewImage(event) {
      const input = event.target;
      const preview = document.getElementById('preview');
      const fullPreview = document.getElementById('fullPreview');
      const defaultIcon = document.getElementById('default-icon');
      const btnEliminar = document.getElementById('btnEliminar');
      const btnToggleStyle = document.getElementById('btnToggleStyle');
      const fullPreviewContainer = document.getElementById('fullPreviewContainer');
      const imageTip = document.getElementById('imageTip');

      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          fullPreview.src = e.target.result;
          preview.classList.remove('hidden');
          defaultIcon.classList.add('hidden');
          btnEliminar.classList.remove('hidden');
          btnToggleStyle.classList.remove('hidden');
          fullPreviewContainer.classList.remove('hidden');
          imageTip.classList.remove('hidden');
          
          // Aplicar estilo inicial
          preview.style.objectFit = currentImageStyle;
          preview.style.objectPosition = 'center';
        };
        reader.readAsDataURL(input.files[0]);
      }
    }

    // Alternar estilo de la imagen
    function toggleImageStyle() {
      const preview = document.getElementById('preview');
      currentImageStyle = currentImageStyle === 'cover' ? 'contain' : 'cover';
      preview.style.objectFit = currentImageStyle;
      
      // Animación del botón
      const btn = document.getElementById('btnToggleStyle');
      btn.classList.add('toggle-image-btn-active');
      setTimeout(() => {
        btn.classList.remove('toggle-image-btn-active');
      }, 300);
    }

    // Eliminar imagen
    function removeImage() {
      const input = document.getElementById('foto');
      const preview = document.getElementById('preview');
      const fullPreview = document.getElementById('fullPreview');
      const defaultIcon = document.getElementById('default-icon');
      const btnEliminar = document.getElementById('btnEliminar');
      const btnToggleStyle = document.getElementById('btnToggleStyle');
      const fullPreviewContainer = document.getElementById('fullPreviewContainer');
      const imageTip = document.getElementById('imageTip');

      input.value = '';
      preview.src = '';
      fullPreview.src = '';
      preview.classList.add('hidden');
      defaultIcon.classList.remove('hidden');
      btnEliminar.classList.add('hidden');
      btnToggleStyle.classList.add('hidden');
      fullPreviewContainer.classList.add('hidden');
      imageTip.classList.add('hidden');
      currentImageStyle = 'cover';
    }
  </script>
</body>
</html>