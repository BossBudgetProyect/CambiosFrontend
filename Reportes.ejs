<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reportes</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="icon" href="img/Logo.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Bebas Neue', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <!-- Fondo financiero elegante -->
  <div class="fixed inset-0 bg-gradient-to-br from-slate-900 via-fuchsia-900 to-slate-800 -z-10">
    <!-- Monedas y símbolos financieros flotantes -->
     
    <div class="absolute inset-0 opacity-40">
      <!-- Símbolos de dinero -->
      <div class="absolute top-10 left-10 text-2xl text-emerald-400 animate-pulse font-bold">$</div>
      <div class="absolute top-20 right-20 text-xl text-blue-300 animate-pulse delay-1000 font-bold">€</div>
      <div class="absolute top-40 left-1/4 text-lg text-slate-300 animate-pulse delay-500 font-bold">¥</div>
      <div class="absolute top-60 right-1/3 text-2xl text-indigo-300 animate-pulse delay-700 font-bold">£</div>
      <div class="absolute bottom-40 left-20 text-xl text-emerald-300 animate-pulse delay-300 font-bold">$</div>
      <div class="absolute bottom-60 right-40 text-lg text-purple-300 animate-pulse delay-1200 font-bold">₿</div>
      <div class="absolute top-1/3 left-1/2 text-xl text-blue-400 animate-pulse delay-800 font-bold">€</div>
      <div class="absolute bottom-20 left-1/3 text-2xl text-teal-300 animate-pulse delay-400 font-bold">$</div>
      <div class="absolute top-80 left-3/4 text-lg text-slate-400 animate-pulse delay-600 font-bold">¢</div>
      <div class="absolute bottom-80 right-1/4 text-xl text-indigo-400 animate-pulse delay-900 font-bold">₹</div>

      <!--Distribuicion logo background-->
      <div class="absolute bottom-40 right-4/4 ">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <div class="absolute top-40 right-1 text-2x1">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <div class="absolute bottom-20 right-40 text-lg">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <!-- Monedas circulares -->
      <div class="absolute top-32 right-10 w-8 h-8 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 opacity-60 animate-pulse delay-200 flex items-center justify-center text-xs font-bold text-yellow-900">$</div>
      <div class="absolute bottom-32 left-16 w-6 h-6 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 opacity-60 animate-pulse delay-800 flex items-center justify-center text-xs font-bold text-emerald-900">€</div>
      <div class="absolute top-1/2 right-1/4 w-7 h-7 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 opacity-60 animate-pulse delay-1100 flex items-center justify-center text-xs font-bold text-blue-900">¥</div>
      <div class="absolute bottom-1/4 left-1/2 w-5 h-5 rounded-full bg-gradient-to-br from-purple-400 to-purple-600 opacity-60 animate-pulse delay-500 flex items-center justify-center text-xs font-bold text-purple-900">£</div>
    </div>

    <!-- Efectos sutiles -->
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-radial from-blue-500/10 via-transparent to-transparent"></div>
    <div class="absolute bottom-0 right-0 w-full h-full bg-gradient-radial from-emerald-500/10 via-transparent to-transparent"></div>
  </div>

  <div class="bg-gray-200 shadow-xl rounded-3xl w-[900px] p-6 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-16 bg-black text-yellow-600 flex items-center justify-center text-3xl tracking-widest"
         style="clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%)">
      REPORTES
    </div>

    <div class="mt-20 text-center">
      <p class="text-lg text-gray-500 mb-4">Aquí podrás generar un reporte según tu necesidad. Genéralo y observa tu gran progreso.</p>
    </div>

    <!-- Selector de tipo de reporte -->
    <select id="tipoReporteUser" class="w-full p-2 border rounded mb-4 text-lg">
      <option disabled selected>Selecciona una opción</option>
      <option>Presupuesto Proyectado</option>
      <option>Presupuesto actual</option>
      <option>Presupuesto actual y proyectado</option>
    </select>

    <!-- Selector de rango de fechas -->
    <p class="text-lg text-yellow-700 mb-2">Selecciona el rango de fechas para tu reporte</p>
    <div class="grid grid-cols-2 gap-4 mb-4">
      <div>
        <label for="fechaInicio" class="block text-lg text-black mb-1">Fecha de inicio</label>
        <input type="date" id="fechaInicio" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-600">
      </div>
      <div>
        <label for="fechaFin" class="block text-lg text-black mb-1">Fecha de finalización</label>
        <input type="date" id="fechaFin" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-yellow-600" disabled>
      </div>
    </div>

    <!-- Formato de reporte -->
    <p class="text-lg text-gray-600 mb-2">¿En qué formato deseas tu reporte? Selecciónalo.</p>
    <div class="flex items-center gap-3 mb-4">
      <input type="radio" name="formato" id="pdf" value="pdf" class="accent-red-600">
      <label for="pdf" class="flex items-center gap-1 text-sm cursor-pointer">
        <img src="https://img.icons8.com/fluency/24/pdf.png" class="w-5 h-5" alt="PDF"> PDF
      </label>
      <input type="radio" name="formato" id="excel" value="excel" class="accent-green-600 ml-4">
      <label for="excel" class="flex items-center gap-1 text-sm cursor-pointer">
        <img src="https://img.icons8.com/fluency/24/ms-excel.png" class="w-5 h-5" alt="Excel"> EXCEL
      </label>
    </div>

    <!-- Confirmación -->
    <p class="text-lg text-gray-700 mb-4">¿Todo listo? ok, ¡continuemos!</p>

    <!-- Botones -->
    <div class="flex flex-row justify-center gap-2">
      <button id="btnPreview" disabled class="btn w-[300px] bg-gray-400 font-bold py-2 rounded-full transition duration-300 cursor-not-allowed">
        Preview
      </button>
      <button id="btnDescargar" disabled class="btn w-[300px] bg-gray-400  font-bold py-2 rounded-full transition duration-300 cursor-not-allowed">
        Descargar reporte
      </button>
    </div>
  </div>

  <script>
     const btnPreview = document.getElementById('btnPreview');
    const btnDescargar = document.getElementById('btnDescargar');
    const tipoReporte = document.getElementById('tipoReporteUser');
    const fechaInicio = document.getElementById('fechaInicio');
    const fechaFin = document.getElementById('fechaFin');
    const formatoPdf = document.getElementById('pdf');
    const formatoExcel = document.getElementById('excel');
    const select = document.getElementById('tipoReporte');
    const formatoRadios = document.getElementsByName('formato');
   
   

    // Habilitar fecha de fin cuando se selecciona fecha de inicio
    fechaInicio.addEventListener('change', function() {
      const fechaSeleccionada = this.value;
      
      if (fechaSeleccionada) {
        fechaFin.disabled = false;
        fechaFin.min = fechaSeleccionada; // Establece la fecha mínima
        
        // Si ya hay una fecha fin seleccionada y es anterior, la limpia
        if (fechaFin.value && fechaFin.value < fechaSeleccionada) {
          fechaFin.value = '';
        }
      } else {
        fechaFin.disabled = true;
        fechaFin.value = '';
      }
      
      validarFormulario();
    });

    // Validar cuando cambia la fecha de fin
    fechaFin.addEventListener('change', validarFormulario);

    // Validar cuando cambia el tipo de reporte
    tipoReporte.addEventListener('change', validarFormulario);

    // Validar cuando se selecciona un formato
    formatoPdf.addEventListener('change', validarFormulario);
    formatoExcel.addEventListener('change', validarFormulario);

    function validarFormulario() {
      const tipoSeleccionado = tipoReporte.value !== 'Selecciona una opción';
      const fechasCompletas = fechaInicio.value && fechaFin.value;
      const formatoSeleccionado = formatoPdf.checked || formatoExcel.checked;
      
      const formularioValido = tipoSeleccionado && fechasCompletas && formatoSeleccionado;
      
      if (formularioValido) {
        btnPreview.disabled = false;
        btnDescargar.disabled = false;
        btnPreview.classList.remove('bg-gray-400', 'cursor-not-allowed');
        btnDescargar.classList.remove('bg-gray-400', 'cursor-not-allowed');
        btnPreview.classList.add('bg-black', 'text-white','hover:bg-fuchsia-700', 'cursor-pointer');
        btnDescargar.classList.add('bg-black', 'text-white', 'hover:bg-yellow-700', 'cursor-pointer');
      } else {
        btnPreview.disabled = true;
        btnDescargar.disabled = true;
        btnPreview.classList.add('bg-gray-400', 'cursor-not-allowed');
        btnDescargar.classList.add('bg-gray-400', 'cursor-not-allowed');
        btnPreview.classList.remove('bg-fuchsia-700', 'hover:bg-fushia-600', 'cursor-pointer');
        btnDescargar.classList.remove('bg-black', 'text-gray-200', 'hover:bg-gray-800', 'cursor-pointer');
      }
    }

    // Funcionalidad de los botones
    btnPreview.addEventListener('click', function() {
      if (!this.disabled) {
        alert(`Vista previa del reporte:\nTipo: ${tipoReporte.value}\nFechas: ${fechaInicio.value} a ${fechaFin.value}\nFormato: ${formatoPdf.checked ? 'PDF' : 'EXCEL'}`);
      }
    });

    btnDescargar.addEventListener('click', function() {
      if (!this.disabled) {
        alert(`Descargando reporte:\nTipo: ${tipoReporte.value}\nFechas: ${fechaInicio.value} a ${fechaFin.value}\nFormato: ${formatoPdf.checked ? 'PDF' : 'EXCEL'}`);
      }
    });
  </script>
</body>
</html>