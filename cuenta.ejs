<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Configuración de Cuenta</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/lucide-static@0.16.40/font/lucide.css" rel="stylesheet">
  <style>
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    .delay-300 { animation-delay: 300ms; }
    .delay-500 { animation-delay: 500ms; }
    .delay-700 { animation-delay: 700ms; }
    .delay-1000 { animation-delay: 1000ms; }
    .delay-1200 { animation-delay: 1200ms; }
    .delay-400 { animation-delay: 400ms; }
    .delay-800 { animation-delay: 800ms; }
    .backdrop-blur-sm { backdrop-filter: blur(4px); }
    
    /* Fondo fijo que no afecta el scroll */
    .space-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
    }
    
    /* Contenedor principal con scroll */
    .main-content {
      position: relative;
      z-index: 10;
    }
  </style>
</head>
<body class="min-h-screen">
  <!-- Fondo financiero elegante -->
  <div class="fixed inset-0 bg-gradient-to-br from-slate-900 via-fuchsia-900 to-slate-800 -z-10">
    <!-- Monedas y símbolos financieros flotantes -->
     
    <div class="absolute inset-0 opacity-40">
      <!-- Símbolos de dinero -->
      <div class="absolute top-10 left-10 text-2xl text-emerald-400 animate-pulse font-bold">$</div>
      <div class="absolute top-20 right-20 text-xl text-blue-300 animate-pulse delay-1000 font-bold">€</div>
      <div class="absolute top-40 left-1/4 text-lg text-slate-300 animate-pulse delay-500 font-bold">¥</div>
      <div class="absolute top-60 right-1/3 text-2xl text-indigo-300 animate-pulse delay-700 font-bold">£</div>
      <div class="absolute bottom-40 left-20 text-xl text-emerald-300 animate-pulse delay-300 font-bold">$</div>
      <div class="absolute bottom-60 right-40 text-lg text-purple-300 animate-pulse delay-1200 font-bold">₿</div>
      <div class="absolute top-1/3 left-1/2 text-xl text-blue-400 animate-pulse delay-800 font-bold">€</div>
      <div class="absolute bottom-20 left-1/3 text-2xl text-teal-300 animate-pulse delay-400 font-bold">$</div>
      <div class="absolute top-80 left-3/4 text-lg text-slate-400 animate-pulse delay-600 font-bold">¢</div>
      <div class="absolute bottom-80 right-1/4 text-xl text-indigo-400 animate-pulse delay-900 font-bold">₹</div>

      <!--Distribuicion logo background-->
      <div class="absolute bottom-40 right-4/4 ">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <div class="absolute top-40 right-1 text-2x1">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <div class="absolute bottom-20 right-40 text-lg">
            <img src="/public/img/LogoCirculo.png" alt="icono" class="w-20 h-20">
      </div>
      <!-- Monedas circulares -->
      <div class="absolute top-32 right-10 w-8 h-8 rounded-full bg-gradient-to-br from-yellow-400 to-yellow-600 opacity-60 animate-pulse delay-200 flex items-center justify-center text-xs font-bold text-yellow-900">$</div>
      <div class="absolute bottom-32 left-16 w-6 h-6 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 opacity-60 animate-pulse delay-800 flex items-center justify-center text-xs font-bold text-emerald-900">€</div>
      <div class="absolute top-1/2 right-1/4 w-7 h-7 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 opacity-60 animate-pulse delay-1100 flex items-center justify-center text-xs font-bold text-blue-900">¥</div>
      <div class="absolute bottom-1/4 left-1/2 w-5 h-5 rounded-full bg-gradient-to-br from-purple-400 to-purple-600 opacity-60 animate-pulse delay-500 flex items-center justify-center text-xs font-bold text-purple-900">£</div>
    </div>

    <!-- Efectos sutiles -->
    <div class="absolute top-0 left-0 w-full h-full bg-gradient-radial from-blue-500/10 via-transparent to-transparent"></div>
    <div class="absolute bottom-0 right-0 w-full h-full bg-gradient-radial from-emerald-500/10 via-transparent to-transparent"></div>
  </div>

  <!-- Contenido principal CON SCROLL -->

<div class="max-w-5xl mx-auto my-12 rounded-xl backdrop-blur-xl border border-slate-400/60 bg-slate-800/40 shadow-[0_8px_25px_rgba(0,0,0,0.45)] hover:shadow-[0_10px_35px_rgba(0,0,0,0.6)] transition-shadow duration-500 p-6">
  <div class="main-content min-h-screen py-8">
    <!-- Formulario principal -->
    <form action="/actualizar-cuenta" method="POST" class="max-w-4xl mx-auto px-4 space-y-6">
      <!-- Header -->
      <div class="text-center space-y-2 pt-8">
        <h1 class="text-4xl font-bold text-yellow-700 bg-clip-text text-transparent drop-shadow-lg">
           Configuración de Cuenta
        </h1>
        <p class="text-slate-300">Personaliza tu perfil y preferencias de presupuesto</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Card - Siempre visible -->
        <div class="lg:col-span-1 border border-fuchsia-600/30 bg-gradient-to-br from-fuchsia-900/40 to-fuchsia-800/20 backdrop-blur-sm shadow-2xl rounded-lg">
          <div class="p-6 text-center">
            <div class="flex items-center justify-center gap-2 text-fuchsia-600 font-semibold text-lg">
              <i data-lucide="user" class="h-5 w-5">Perfil</i>
            </div>
          </div>
          <div class="px-6 pb-6 space-y-6">
            <!-- Profile Picture -->
            <div class="flex flex-col items-center space-y-4">
              <div class="relative">
                <div class="h-24 w-24 rounded-full border-4 border-fuchsia-400/50 shadow-lg shadow-fuchsia-500/25 flex items-center justify-center bg-fuchsia-800/50 text-fuchsia-200 text-lg backdrop-blur-sm overflow-hidden">
				  <% if(foto) { %>
					<img src="/uploads/<%= foto %>" alt="Avatar" class="w-full h-full object-cover">
				  <% } else { %>
					<%= name && name.charAt(0) %><%= lastName && lastName.charAt(0) %>
				  <% } %>
				</div>
                <label for="avatarInput" class="absolute -bottom-2 -right-2 h-8 w-8 rounded-full p-0 bg-fuchsia-500 hover:bg-fuchsia-600 shadow-lg shadow-fuchsia-500/25 flex items-center justify-center cursor-pointer">
                  <i data-lucide="camera" class="h-4 w-4"></i>
                  <input type="file" id="avatarInput" name="avatar" accept="image/*" class="hidden">
                </label>
              </div>
              <button type="button" onclick="document.getElementById('avatarInput').click()" class="w-full py-2 px-4 rounded-md border border-gray-400/50 bg-gray-900/30 text-gray-300 hover:bg-gray-800/40 backdrop-blur-sm text-sm font-medium">
                Cambiar Foto
              </button>
            </div>

            <!-- Quick Stats -->
            <div class="space-y-3">
              <div class="flex justify-between items-center p-3 bg-fuchsia-900/30 rounded-lg border border-yellow-400/30 backdrop-blur-sm">
                <span class="text-sm font-medium text-gray-300">Presupuesto Actual</span>
                <span class="bg-blue-500/80 hover:bg-blue-400/80 shadow-lg shadow-blue-500/25 px-2 py-1 rounded-full text-xs font-medium">$2,500</span>
              </div>
              <div class="flex justify-between items-center p-3 bg-red-900/30 rounded-lg border border-red-400/30 backdrop-blur-sm">
                <span class="text-sm font-medium text-red-300">Gastos del Mes</span>
                <span class="bg-red-500/80 hover:bg-red-400/80 shadow-lg shadow-red-500/25 px-2 py-1 rounded-full text-xs font-medium">$1,850</span>
              </div>
              <div class="flex justify-between items-center p-3 bg-emerald-900/30 rounded-lg border border-emerald-400/30 backdrop-blur-sm">
                <span class="text-sm font-medium text-emerald-300"> Ahorro</span>
                <span class="bg-emerald-500/80 hover:bg-emerald-400/80 shadow-lg shadow-emerald-500/25 px-2 py-1 rounded-full text-xs font-medium">$650</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Main Settings - Accordion -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Personal Information -->
          <div class="border-none">
        <div class="border border-fuchsia-400/30 bg-gradient-to-br from-fuchsia-900/40 to-fuchsia-800/20 backdrop-blur-sm shadow-2xl rounded-lg overflow-hidden">
          <button type="button" class="accordion-trigger w-full px-6 py-4 hover:no-underline text-left flex justify-between items-center">
            <div class="flex items-center gap-2 text-yellow-600 font-semibold">
              <i data-lucide="user" class="h-5 w-5"></i> Información Personal
              <i data-lucide="chevron-down" class="accordion-icon h-4 w-4 transform transition-transform"></i>
            </div>
          </button>
          <div class="accordion-content hidden px-6 pb-6 space-y-4">
            <p class="text-black mb-4 text-sm">Actualiza tu información básica de perfil</p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="space-y-2">
                <label for="firstName" class="text-black font-medium text-sm">Nombre</label>
                <input
                  id="firstName"
                  name="nombres"
                  value=""
                  class="w-full px-3 py-2 border border-[rgba(88,28,135,0.25)] bg-[rgba(255,255,255,0.95)] text-black focus:border-[rgba(88,28,135,0.6)] focus:ring-[rgba(88,28,135,0.15)] backdrop-blur-sm rounded-md"
                />
              </div>
              <div class="space-y-2">
                <label for="lastName" class="text-black font-medium text-sm">Apellido</label>
                <input
                  id="lastName"
                  name="apellidos"
                  value=""
                  class="w-full px-3 py-2 border border-[rgba(88,28,135,0.25)] bg-[rgba(255,255,255,0.95)] text-black focus:border-[rgba(88,28,135,0.6)] focus:ring-[rgba(88,28,135,0.15)] backdrop-blur-sm rounded-md"
                />
              </div>
            </div>
            <div class="space-y-2">
              <label for="username" class="text-black font-medium text-sm">Nombre de Usuario</label>
              <input
                id="username"
                name="nombreUsuario"
                value=""
                class="w-full px-3 py-2 border border-[rgba(88,28,135,0.25)] bg-[rgba(255,255,255,0.95)] text-black focus:border-[rgba(88,28,135,0.6)] focus:ring-[rgba(88,28,135,0.15)] backdrop-blur-sm rounded-md"
              />
            </div>
            <div class="space-y-2">
              <label for="email" class="text-black font-medium text-sm">Correo Electrónico</label>
              <input
                id="email"
                name="correo"
                type="email"
                value=""
                class="w-full px-3 py-2 border border-[rgba(88,28,135,0.25)] bg-[rgba(255,255,255,0.95)] text-black focus:border-[rgba(88,28,135,0.6)] focus:ring-[rgba(88,28,135,0.15)] backdrop-blur-sm rounded-md cursor-not-allowed"
                readonly
              />
            </div>
            <div class="space-y-2">
              <label for="profesion" class="text-black font-medium text-sm">Profesión</label>
              <input
                id="profesion"
                name="profesion"
                value=""
                class="w-full px-3 py-2 border border-[rgba(88,28,135,0.25)] bg-[rgba(255,255,255,0.95)] text-black focus:border-[rgba(88,28,135,0.6)] focus:ring-[rgba(88,28,135,0.15)] backdrop-blur-sm rounded-md"
              />
            </div>
            <div class="space-y-2">
              <label for="bio" class="text-black font-medium text-sm">Expectativas</label>
              <textarea
                id="bio"
                name="descripcion"
                class="min-h-[80px] w-full px-3 py-2 border border-[rgba(88,28,135,0.25)] bg-[rgba(255,255,255,0.95)] text-black focus:border-[rgba(88,28,135,0.6)] focus:ring-[rgba(88,28,135,0.15)] backdrop-blur-sm rounded-md"
              ></textarea>
            </div>
          </div>
        </div>
      </div>

          <!-- Budget Preferences -->
          <div class="border-none">
            <div class="border border-emerald-400/30 bg-gradient-to-br from-emerald-900/40 to-emerald-800/20 backdrop-blur-sm shadow-2xl rounded-lg overflow-hidden">
              <button type="button" class="accordion-trigger w-full px-6 py-4 hover:no-underline text-left flex justify-between items-center">
                <div class="flex items-center gap-2 text-emerald-300 font-semibold">
                  <i data-lucide="dollar-sign" class="h-5 w-5"></i> Preferencias de Presupuesto
                  <i data-lucide="chevron-down" class="accordion-icon h-4 w-4 transform transition-transform"></i>
                </div>
              </button>
              <div class="accordion-content hidden px-6 pb-6 space-y-4">
                <p class="text-emerald-200 mb-4 text-sm">Configura tus preferencias financieras</p>
                <div class="space-y-2">
                  <label for="currency" class="text-emerald-300 font-medium text-sm">Moneda</label>
                  <select 
                    id="currency"
                    name="moneda"
                    class="w-full px-3 py-2 border border-emerald-400/50 bg-emerald-900/20 text-emerald-100 focus:border-emerald-400 focus:ring-emerald-400/50 backdrop-blur-sm rounded-md"
                  >
                    <option value="usd" <%= moneda === 'usd' ? 'selected' : '' %>>💵 USD - Dólar</option>
                    <option value="eur" <%= moneda === 'eur' ? 'selected' : '' %>>💶 EUR - Euro</option>
                    <option value="mxn" <%= moneda === 'mxn' ? 'selected' : '' %>>🇲🇽 MXN - Peso Mexicano</option>
                    <option value="cop" <%= moneda === 'cop' ? 'selected' : '' %>>🇨🇴 COP - Peso Colombiano</option>
                  </select>
                </div>
                <!-- Puedes agregar más campos de preferencias aquí cuando los definas -->
              </div>
            </div>
          </div>

          <!-- Notifications -->
          <div class="border-none">
            <div class="border border-amber-400/30 bg-gradient-to-br from-amber-900/40 to-orange-800/20 backdrop-blur-sm shadow-2xl rounded-lg overflow-hidden">
              <button type="button" class="accordion-trigger w-full px-6 py-4 hover:no-underline text-left flex justify-between items-center">
                <div class="flex items-center gap-2 text-amber-300 font-semibold">
                  <i data-lucide="bell" class="h-5 w-5"></i> Notificaciones
                  <i data-lucide="chevron-down" class="accordion-icon h-4 w-4 transform transition-transform"></i>
                </div>
              </button>
              <div class="accordion-content hidden px-6 pb-6 space-y-4">
                <p class="text-amber-200 mb-4 text-sm">Configura cómo quieres recibir notificaciones</p>
                <div class="flex items-center justify-between p-4 bg-amber-900/30 rounded-lg border border-amber-400/30 backdrop-blur-sm">
                  <div class="space-y-0.5">
                    <label for="budgetAlerts" class="text-amber-200 font-medium text-sm">⚠️ Alertas de Presupuesto</label>
                    <p class="text-sm text-amber-300">Recibe alertas cuando te acerques al límite</p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input 
                      id="budgetAlerts"
                      type="checkbox" 
                      name="alertasPresupuesto" 
                      class="sr-only peer" 
                      <%=  %>
                    >
                    <div class="w-11 h-6 bg-amber-900/50 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-amber-500"></div>
                  </label>
                </div>
                <div class="h-px bg-amber-400/30"></div>
                <div class="flex items-center justify-between p-4 bg-amber-900/30 rounded-lg border border-amber-400/30 backdrop-blur-sm">
                  <div class="space-y-0.5">
                    <label for="expenseReminders" class="text-amber-200 font-medium text-sm">📝 Recordatorios de Gastos</label>
                    <p class="text-sm text-amber-300">Recordatorios para registrar gastos diarios</p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input 
                      id="expenseReminders"
                      type="checkbox" 
                      name="recordatoriosGastos" 
                      class="sr-only peer" 
                      <%= %>
                    >
                    <div class="w-11 h-6 bg-amber-900/50 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-amber-500"></div>
                  </label>
                </div>
                <div class="h-px bg-amber-400/30"></div>
                <div class="flex items-center justify-between p-4 bg-amber-900/30 rounded-lg border border-amber-400/30 backdrop-blur-sm">
                  <div class="space-y-0.5">
                    <label for="monthlyReports" class="text-amber-200 font-medium text-sm">📊 Reportes Mensuales</label>
                    <p class="text-sm text-amber-300">Resumen mensual de tus finanzas</p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input 
                      id="monthlyReports"
                      type="checkbox" 
                      name="reportesMensuales" 
                      class="sr-only peer" 
                      <%= %>
                    >
                    <div class="w-11 h-6 bg-amber-900/50 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-amber-500"></div>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- Security -->
          <div class="border-none">
            <div class="border border-purple-400/30 bg-gradient-to-br from-purple-900/40 to-purple-800/20 backdrop-blur-sm shadow-2xl rounded-lg overflow-hidden">
              <button type="button" class="accordion-trigger w-full px-6 py-4 hover:no-underline text-left flex justify-between items-center">
                <div class="flex items-center gap-2 text-purple-300 font-semibold">
                  <i data-lucide="shield" class="h-5 w-5"></i>  Seguridad
                  <i data-lucide="chevron-down" class="accordion-icon h-4 w-4 transform transition-transform"></i>
                </div>
              </button>
              <div class="accordion-content hidden px-6 pb-6 space-y-4">
                <p class="text-purple-200 mb-4 text-sm">Gestiona la seguridad de tu cuenta</p>
                <div class="space-y-2">
                  <label for="currentPassword" class="text-purple-300 font-medium text-sm">Contraseña Actual</label>
                  <input
                    id="currentPassword"
                    name="contrasenaActual"
                    type="password"
                    class="w-full px-3 py-2 border border-purple-400/50 bg-purple-900/20 text-purple-100 placeholder:text-purple-400 focus:border-purple-400 focus:ring-purple-400/50 backdrop-blur-sm rounded-md"
                  />
                </div>
                <div class="space-y-2">
                  <label for="newPassword" class="text-purple-300 font-medium text-sm">Nueva Contraseña</label>
                  <input
                    id="newPassword"
                    name="nuevaContrasena"
                    type="password"
                    class="w-full px-3 py-2 border border-purple-400/50 bg-purple-900/20 text-purple-100 placeholder:text-purple-400 focus:border-purple-400 focus:ring-purple-400/50 backdrop-blur-sm rounded-md"
                  />
                </div>
                <div class="space-y-2">
                  <label for="confirmPassword" class="text-purple-300 font-medium text-sm">Confirmar Contraseña</label>
                  <input
                    id="confirmPassword"
                    name="confirmarContrasena"
                    type="password"
                    class="w-full px-3 py-2 border border-purple-400/50 bg-purple-900/20 text-purple-100 placeholder:text-purple-400 focus:border-purple-400 focus:ring-purple-400/50 backdrop-blur-sm rounded-md"
                  />
                </div>
                <button type="button" id="changePasswordBtn" class="w-full py-2 px-4 rounded-md bg-purple-600/80 hover:bg-purple-500/80 shadow-lg shadow-purple-500/25 backdrop-blur-sm text-white font-medium">
                  🔐 Cambiar Contraseña
                </button>
              </div>
            </div>
          </div>

          <!-- Danger Zone -->
          <div class="border-none">
            <div class="border border-red-400/30 bg-gradient-to-br from-red-900/40 to-red-800/20 backdrop-blur-sm shadow-2xl rounded-lg overflow-hidden">
              <button type="button" class="accordion-trigger w-full px-6 py-4 hover:no-underline text-left flex justify-between items-center">
                <div class="flex items-center gap-2 text-red-300 font-semibold">
                  <i data-lucide="trash-2" class="h-5 w-5"></i>  Zona de Peligro
                  <i data-lucide="chevron-down" class="accordion-icon h-4 w-4 transform transition-transform"></i>
                </div>
              </button>
              <div class="accordion-content hidden px-6 pb-6 space-y-4">
                <p class="text-red-200 mb-4 text-sm">Acciones irreversibles para tu cuenta</p>
                <div class="p-4 bg-red-900/30 rounded-lg border border-red-400/30 backdrop-blur-sm">
                  <h4 class="font-medium text-red-200 mb-2">🗑️ Eliminar Cuenta</h4>
                  <p class="text-sm text-red-300 mb-3">
                    Esta acción eliminará permanentemente tu cuenta y todos tus datos.
                  </p>
                  <button type="button" id="deleteAccountBtn" class="py-1.5 px-3 rounded-md bg-red-600/80 hover:bg-red-500/80 shadow-lg shadow-red-500/25 text-white text-sm font-medium">
                    Eliminar Cuenta
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-end pb-8">
        <button type="button" id="cancelBtn" class="sm:w-auto w-full py-2 px-4 rounded-md border border-slate-400/50 bg-slate-800/50 text-slate-300 hover:bg-slate-700/50 backdrop-blur-sm">
          ❌ Cancelar
        </button>
        <button type="submit" id="saveBtn" class="sm:w-auto w-full py-2 px-4 rounded-md bg-gradient-to-r from-yellow-500/80 to-yellow-500/80 hover:from-yellow-400/80 hover:to-yellow-400/80 text-white font-medium shadow-lg shadow-yellow-500/25 backdrop-blur-sm">
          💾 Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>
  <!-- Formulario oculto para subir avatar -->
  <form id="avatarForm" action="/actualizar-avatar" method="POST" enctype="multipart/form-data" class="hidden">
    <input type="file" id="realAvatarInput" name="avatar" accept="image/*">
  </form>

  <script>
    // Simple accordion functionality
    document.querySelectorAll('.accordion-trigger').forEach(trigger => {
      trigger.addEventListener('click', () => {
        const content = trigger.nextElementSibling;
        const icon = trigger.querySelector('.accordion-icon');
        
        if (content.classList.contains('hidden')) {
          content.classList.remove('hidden');
          icon.classList.add('rotate-180');
        } else {
          content.classList.add('hidden');
          icon.classList.remove('rotate-180');
        }
      });
    });

    // Manejar cambio de avatar
    document.getElementById('avatarInput').addEventListener('change', function(e) {
      if (this.files.length > 0) {
        const formData = new FormData();
        formData.append('avatar', this.files[0]);
        
        fetch('/actualizar-avatar', {
          method: 'POST',
          body: formData
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Recargar la página para ver los cambios
            window.location.reload();
          } else {
            alert('Error al actualizar el avatar: ' + (data.message || 'Error desconocido'));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error al subir la imagen');
        });
      }
    });

    // Manejar cambio de contraseña
    document.getElementById('changePasswordBtn').addEventListener('click', function() {
      const currentPassword = document.getElementById('currentPassword').value;
      const newPassword = document.getElementById('newPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;

      if (!currentPassword || !newPassword || !confirmPassword) {
        alert('Todos los campos son requeridos');
        return;
      }

      if (newPassword !== confirmPassword) {
        alert('Las contraseñas no coinciden');
        return;
      }

      // Aquí iría la llamada al servidor para cambiar la contraseña
      fetch('/cambiar-password', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          currentPassword,
          newPassword,
          confirmPassword
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Contraseña cambiada exitosamente');
          // Limpiar campos
          document.getElementById('currentPassword').value = '';
          document.getElementById('newPassword').value = '';
          document.getElementById('confirmPassword').value = '';
        } else {
          alert('Error: ' + (data.message || 'No se pudo cambiar la contraseña'));
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al cambiar la contraseña');
      });
    });

    // Manejar eliminación de cuenta
    document.getElementById('deleteAccountBtn').addEventListener('click', function() {
      if (confirm('¿Estás seguro que deseas eliminar tu cuenta? Esta acción no se puede deshacer.')) {
        fetch('/eliminar-cuenta', {
          method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Cuenta eliminada exitosamente');
            window.location.href = '/';
          } else {
            alert('Error: ' + (data.message || 'No se pudo eliminar la cuenta'));
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('Error al eliminar la cuenta');
        });
      }
    });

    // Botón cancelar
    document.getElementById('cancelBtn').addEventListener('click', function() {
      window.location.reload();
    });
  </script>
</body>
</html>